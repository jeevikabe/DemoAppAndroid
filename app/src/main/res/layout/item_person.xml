<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/person_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="Person Image"/>

        <!-- Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <!-- Name -->
            <TextView
                android:id="@+id/person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Phone Number -->
            <TextView
                android:id="@+id/person_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textSize="14sp" />

            <!-- TP ID -->
            <TextView
                android:id="@+id/person_tp_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP ID"
                android:textSize="14sp" />

            <!-- Address -->
            <TextView
                android:id="@+id/person_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14sp" />

            <!-- Gender -->
            <TextView
                android:id="@+id/person_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="14sp" />

            <!-- Category -->
            <TextView
                android:id="@+id/person_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp" />

            <!-- Watch List Status -->
            <TextView
                android:id="@+id/person_watchlist_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watch List Status"
                android:textSize="14sp" />

            <!-- Sector -->
            <TextView
                android:id="@+id/person_sector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sector"
                android:textSize="14sp" />

            <!-- POI ID -->
            <TextView
                android:id="@+id/person_poi_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="POI ID"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
