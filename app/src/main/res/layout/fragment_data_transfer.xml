<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingTop="0dp"
    android:paddingBottom="230dp"
    android:orientation="vertical">


    <Button
        android:id="@+id/send_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Data to Activity" />

    <TextView
        android:id="@+id/received_message_text_view"
        android:layout_width="wrap_content"
        android:paddingBottom="350dp"

        android:layout_height="wrap_content"
        android:text="Received message will appear here" />

</LinearLayout>
